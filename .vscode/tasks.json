{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "Build OpenGL app",
        "command": "clang",
        "args": [
          "-o",
          "${fileBasenameNoExtension}",
          "${relativeFile}",
          "-I$(brew --prefix)/include",
          "-L$(brew --prefix)/lib",
          "-lglfw",
          "-framework",
          "OpenGL",
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ],
    "version": "2.0.0"
  }
